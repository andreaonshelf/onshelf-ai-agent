# Development Environment Configuration
# Copy this to .env for development work

# Environment Setting (CRITICAL - DO NOT CHANGE)
ENVIRONMENT=development

# Database Configuration
# For development, use a separate database or clearly marked test data
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_service_key_here

# Optional: Separate development database (recommended)
SUPABASE_DEV_URL=your_dev_supabase_url_here
SUPABASE_DEV_KEY=your_dev_service_key_here

# Development Features
ENABLE_DEBUG_MODE=true
LOG_ALL_QUERIES=true
SHOW_PERFORMANCE_METRICS=true

# Safety Features (even in development)
WARN_ON_DANGEROUS_OPERATIONS=true
BACKUP_BEFORE_UPDATE=true

# API Keys for extraction
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Optional: Local file storage
LOCAL_STORAGE_PATH=./dev_storage

# User identification (for audit logs)
USER=developer_name

# Feature flags
ENABLE_EXPERIMENTAL_FEATURES=true
ALLOW_FORCE_OPERATIONS=true