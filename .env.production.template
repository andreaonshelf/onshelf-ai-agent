# Production Environment Configuration
# CRITICAL: Review all settings before deployment

# Environment Setting (NEVER CHANGE THIS IN PRODUCTION)
ENVIRONMENT=production

# Production Database (HIGHLY SENSITIVE)
SUPABASE_URL=your_production_supabase_url
SUPABASE_SERVICE_KEY=your_production_service_key

# Production Safety (DO NOT DISABLE)
ALLOW_DATA_MODIFICATION=false
REQUIRE_CONFIRMATION=true
AUDIT_ENABLED=true
BACKUP_BEFORE_UPDATE=true

# API Keys (Production only)
OPENAI_API_KEY=your_production_openai_key
ANTHROPIC_API_KEY=your_production_anthropic_key

# Monitoring and Alerts
SENTRY_DSN=your_sentry_dsn
ALERT_EMAIL=ops@yourcompany.com
SLACK_WEBHOOK=your_slack_webhook

# Performance Limits
MAX_API_COST_PER_EXTRACTION=5.0
MAX_PROCESSING_TIME_MINUTES=60
MAX_CONCURRENT_EXTRACTIONS=10

# Security
REQUIRE_HTTPS=true
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100

# User identification (for audit)
USER=production_system

# Feature flags (conservative in production)
ENABLE_EXPERIMENTAL_FEATURES=false
ALLOW_FORCE_OPERATIONS=false

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_RETENTION_DAYS=90